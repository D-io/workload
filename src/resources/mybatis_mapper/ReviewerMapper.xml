<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.edu.uestc.ostec.workload.dao.ReviewerDao" >
  <resultMap id="reviewerResultMap" type="cn.edu.uestc.ostec.workload.pojo.Reviewer" >
    <id column="category_id" property="categoryId" jdbcType="INTEGER" />
    <result column="reviewer_id" property="reviewerId" jdbcType="INTEGER" />
  </resultMap>

  <select id="select" resultMap="reviewerResultMap">
    select category_id,reviewer_id
    from reviewer
    where category_id = #{categoryId,jdbcType=INTEGER}
  </select>

  <delete id="delete">
    delete from reviewer
    where category_id = #{categoryId,jdbcType=INTEGER}
  </delete>

  <insert id="insert">
    insert into reviewer (category_id, reviewer_id)
    values (#{categoryId,jdbcType=INTEGER}, #{reviewerId,jdbcType=INTEGER})
  </insert>

  <update id="update">
    update reviewer
    set reviewer_id = #{reviewerId,jdbcType=INTEGER}
    where category_id = #{categoryId,jdbcType=INTEGER}
  </update>
</mapper>